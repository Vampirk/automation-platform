# 데이터베이스 설정
DATABASE_URL=sqlite:///./data/automation.db
# PostgreSQL 사용 시: postgresql://user:password@localhost/automation

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=logs/automation.log
LOG_ROTATION=500 MB
LOG_RETENTION=30 days

# 스케줄러 설정
SCHEDULER_TIMEZONE=Asia/Seoul
MAX_CONCURRENT_JOBS=10

# 알림 설정
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=automation@example.com
EMAIL_PASSWORD=your_password
EMAIL_TO=admin@example.com

SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# 모니터링 임계치
CPU_THRESHOLD=80
MEMORY_THRESHOLD=85
DISK_THRESHOLD=90

# API 서버 설정
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# 플랫폼 감지 (자동 설정됨)
PLATFORM=auto
